# Enhanced Image Search Engine Configuration

# ===========================================
# DIRECTORIES (Auto-created)
# ===========================================
# DATA_DIR=data/images
# COCO_DIR=data/coco
# VECTOR_STORE_DIR=vector_store

# ===========================================
# COCO DATASET SETTINGS
# ===========================================
ENABLE_COCO=true
# Number of COCO images to use (null = all ~5000 images)
COCO_SUBSET_SIZE=5000

# ===========================================
# EXTERNAL API SETTINGS
# ===========================================
ENABLE_EXTERNAL_APIS=true
API_TIMEOUT=10
MAX_API_RESULTS=20

# Openverse API (No key required - fully free)
# Optional: Register at https://api.openverse.org to increase rate limits
# OPENVERSE_CLIENT_ID=your_client_id_here
# OPENVERSE_CLIENT_SECRET=your_client_secret_here

# Lexica API (No key required - fully free)
# No configuration needed - works out of the box

# Unsplash API (Optional - requires free API key)
# Get free key at: https://unsplash.com/developers
# UNSPLASH_ACCESS_KEY=your_unsplash_access_key_here

# Pexels API (Optional - requires free API key)
# Get free key at: https://www.pexels.com/api/
# PEXELS_API_KEY=your_pexels_api_key_here

# ===========================================
# SEARCH RESULT FUSION WEIGHTS
# ===========================================
LOCAL_WEIGHT=0.5
COCO_WEIGHT=0.3
API_WEIGHT=0.2
ENABLE_RESULT_FUSION=true